@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModels;

<!--grade calculator-->
<h2>Grade Calculator</h2>
<p>(enter the percent for each category i.e. 95% is 95)</p>
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments"/><br />
    <label>Group Projects:</label>
    <input id="group_projects" asp-for="group_projects"/><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes"/><br />
    <label>Midterm Exam:</label>
    <input id="midterm" asp-for="midterm"/><br />
    <label>Final Exam:</label>
    <input id="final" asp-for="final"/><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex"/><br /><br />

    <label>Final Percentage:</label>
    <p id="finalpercent"></p>
    <label>Final Letter Grade:</label>
    <p id="finalletter"></p>
    <br />

    <input id="btnSend" type="submit" value="Calculate" />
    
    <div asp-validation-summary="All"></div>
</form>
<!--add gradecalculator.js-->
<script src="js/gradecalculator.js"></script>